{
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "microservice_one",
        "Match": {
          "Path": "microservice-one/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "microservice_one": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://microservicefirst.api:8080"
          },
          "destination2": {
            "Address": "http://microservicesecond.api:8080"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
